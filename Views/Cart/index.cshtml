@model ClothingWebApp.Models.Cart

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h1>Shopping Cart</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.CartItems != null && Model.CartItems.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Size</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (item.Product != null && !string.IsNullOrEmpty(item.Product.ImageUrl))
                                    {
                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 50px; height: 50px; object-fit: cover;" class="me-3">
                                    }
                                    <div>
                                        <strong>@(item.Product?.Name ?? "Unknown Product")</strong>
                                        <br/>
                                        <small class="text-muted">@(item.Product?.Color ?? "N/A")</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (item.Product?.Category?.Name?.ToUpper().Contains("BAG") == true)
                                {
                                    <span>One Size</span>
                                }
                                else
                                {
                                    <form asp-action="UpdateSize" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <select name="newSize" class="form-select form-select-sm" onchange="this.form.submit()">
                                            @if (item.Product?.Category?.Name?.ToUpper() == "SHOES")
                                            {
                                                @foreach (var size in new[] { "36", "37", "38", "39", "40", "41" })
                                                {
                                                    if (item.Size == size)
                                                    {
                                                        <option value="@size" selected>@size</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@size">@size</option>
                                                    }
                                                }
                                            }
                                            else
                                            {
                                                @foreach (var size in new[] { "XS", "S", "M", "L", "XL" })
                                                {
                                                    if (item.Size == size)
                                                    {
                                                        <option value="@size" selected>@size</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@size">@size</option>
                                                    }
                                                }
                                            }
                                        </select>
                                    </form>
                                }
                            </td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" max="10" 
                                        class="form-control form-control-sm" style="width: 60px;"
                                        onchange="this.form.submit()" />
                                </form>
                            </td>
                            <td>@((item.Product?.Price * item.Quantity ?? 0).ToString("C"))</td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3">Total</th>
                        <th>@Model.CartItems.Sum(p => p.Product?.Price * p.Quantity ?? 0).ToString("C")</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
        
        <div class="mt-4">
            <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Home" asp-action="Index">Continue shopping</a>.
        </div>
    }
</div>