@{
    ViewData["Title"] = "Order Confirmation";
    var order = ViewBag.Order;
    var payment = ViewBag.Payment;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Order Confirmation</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 48px;"></i>
                        <h2 class="mt-3">Thank You For Your Order!</h2>
                        <p class="lead">Your order has been successfully placed.</p>
                    </div>
                    
                    <div class="alert alert-info">
                        <strong>Order #:</strong> @order.OrderId<br>
                        <strong>Date:</strong> @order.OrderDate.ToString("MM/dd/yyyy hh:mm tt")<br>
                        <strong>Total Amount:</strong> @order.TotalAmount.ToString("C")<br>
                        <strong>Payment Method:</strong> @payment.PaymentMethod<br>
                        <strong>Payment Status:</strong> @(payment.IsPaid ? "Paid" : "Pending payment")
                    </div>
                    
                    @if (!payment.IsPaid)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            You selected Cash on Delivery. Payment will be collected when your order is delivered.
                        </div>
                    }
                    
                    <p>Your order has been confirmed and will be shipped soon. You will receive a confirmation email shortly.</p>
                    
                    <div class="mt-4 text-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">Continue Shopping</a>
                        <a href="@Url.Action("OrderHistory", "Account")" class="btn btn-secondary">View Order History</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>