@{
    ViewData["Title"] = "Order Confirmation";
    var order = ViewBag.Order;
    var payment = ViewBag.Payment;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="order-step mb-5">
                <div class="step-item step-complete">
                    <div class="step-number">
                        <i class="fas fa-check"></i>
                    </div>
                    <p>Cart</p>
                </div>
                <div class="step-item step-complete">
                    <div class="step-number">
                        <i class="fas fa-check"></i>
                    </div>
                    <p>Checkout</p>
                </div>
                <div class="step-item step-active">
                    <div class="step-number">3</div>
                    <p>Confirmation</p>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Order Confirmation</h4>
                </div>
                <div class="card-body text-center py-5">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Thank You For Your Order!</h2>
                    <p class="lead">Your order has been successfully placed and will be processed shortly.</p>
                    
                    <div class="alert alert-info mt-4">
                        <div class="row">
                            <div class="col-md-6 text-start">
                                <p><strong>Order #:</strong> @order.OrderId</p>
                                <p><strong>Date:</strong> @order.OrderDate.ToString("MMMM dd, yyyy")</p>
                                <p><strong>Total Amount:</strong> @order.TotalAmount.ToString("C")</p>
                            </div>
                            <div class="col-md-6 text-start">
                                <p><strong>Payment Method:</strong> @payment.PaymentMethod</p>
                                <p>
                                    <strong>Payment Status:</strong> 
                                    @if (payment.IsPaid)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    @if (!payment.IsPaid)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            You selected Cash on Delivery. Payment will be collected when your order is delivered.
                        </div>
                    }
                    
                    <p class="mt-4">A confirmation email has been sent to <strong>@order.Customer.Email</strong>.</p>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("OrderDetails", "Account", new { id = order.OrderId })" class="btn btn-outline-dark me-2">
                            <i class="fas fa-list me-2"></i> View Order Details
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-shopping-bag me-2"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>