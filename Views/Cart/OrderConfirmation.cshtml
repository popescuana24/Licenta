@{
    ViewData["Title"] = "Order Confirmation";
    var order = ViewBag.Order;
    var payment = ViewBag.Payment;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            <!-- Success Message -->
            <div class="text-center mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                <h2 class="mt-3">Order Placed Successfully!</h2>
            </div>

            <!-- Order Details -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">Order Details</h5>
                    
                    <p><strong>Date:</strong> @order.OrderDate.ToString("MMM dd, yyyy")</p>
                    <p><strong>Total:</strong> @order.TotalAmount.ToString("C")</p>
                    <p><strong>Payment:</strong> @payment.PaymentMethod</p>

                    @if (!payment.IsPaid)
                    {
                        <div class="alert alert-warning mt-3">
                            <strong>Cash on Delivery:</strong> Payment due upon delivery.
                        </div>
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-danger me-2">
                    Continue Shopping
                </a>
            </div>

        </div>
    </div>
</div>