@model ClothingWebApp.Models.Cart

@{
    ViewData["Title"] = "Checkout";
    var totalAmount = Model.CartItems.Where(item => item.Product != null).Sum(item => item.Product!.Price * item.Quantity);
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            
            <h2 class="mb-4">Checkout</h2>

            <!-- Customer Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Shipping Information</h5>
                </div>
                <div class="card-body">
                    @if (Model.Customer != null)
                    {
                        <p><strong>@Model.Customer.FirstName @Model.Customer.LastName</strong></p>
                        <p>@Model.Customer.Address</p>
                        <p>@Model.Customer.Email</p>
                    }
                    else
                    {
                        <p>Please <a asp-controller="Account" asp-action="Login">login</a> to continue.</p>
                    }
                </div>
            </div>

            <!-- Order Items -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Your Order </h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                            <div class="d-flex align-items-center">
                                @if (item.Product != null && !string.IsNullOrEmpty(item.Product.ImageUrl))
                                {
                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name" 
                                         style="width: 50px; height: 50px; object-fit: cover;" class="me-3"
                                         onerror="this.src='/images/products/no-image.jpg'">
                                }
                                <div>
                                    <strong>@(item.Product?.Name ?? "Unknown Product")</strong><br>
                                    <small class="text-muted">Size: @item.Size | Quantity: @item.Quantity</small>
                                </div>
                            </div>
                            <span class="fw-bold">@((item.Product?.Price * item.Quantity ?? 0).ToString("C"))</span>
                        </div>
                    }
                    
                    <!-- Total -->
                    <div class="d-flex justify-content-between align-items-center">
                        <h5>Total:</h5>
                        <h5 class="text-danger">@totalAmount.ToString("C")</h5>
                    </div>
                </div>
            </div>

            <!-- Payment Form -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Payment Method</h5>
                </div>
                <div class="card-body">
                    <form asp-action="PlaceOrder" method="post">
                        
                        <!-- Payment Options -->
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" 
                                       id="creditCard" value="Credit Card" checked>
                                <label class="form-check-label" for="creditCard">
                                    Credit/Debit Card
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" 
                                       id="cashOnDelivery" value="Cash on Delivery">
                                <label class="form-check-label" for="cashOnDelivery">
                                    Cash on Delivery
                                </label>
                            </div>
                        </div>

                        <!-- Credit Card Fields -->
                        <div id="cardFields">
                            <div class="mb-3">
                                <label for="cardNumber" class="form-label">Card Number</label>
                                <input type="text" class="form-control" name="cardNumber" 
                                       placeholder="1234 5678 9012 3456" required>
                            </div>
                            <div class="mb-3">
                                <label for="cardName" class="form-label">Name on Card</label>
                                <input type="text" class="form-control" name="cardName" required>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="expiryDate" class="form-label">Expiry Date</label>
                                    <input type="text" class="form-control" name="expiryDate" 
                                           placeholder="MM/YY" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="cvv" class="form-label">CVV</label>
                                    <input type="text" class="form-control" name="cvv" 
                                           placeholder="123" required>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-danger btn-lg">
                                Place Order - @totalAmount.ToString("C")
                            </button>
                        </div>
                        
                    </form>
                </div>
            </div>

            <!-- Back to Cart -->
            <div class="text-center mb-5">
                <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary">
                    ‚Üê Back to Cart
                </a>
            </div>

        </div>
    </div>
</div>

<script>
    // Simple JavaScript to show/hide card fields
    document.addEventListener('DOMContentLoaded', function() {
        const creditCard = document.getElementById('creditCard');
        const cashOnDelivery = document.getElementById('cashOnDelivery');
        const cardFields = document.getElementById('cardFields');
        const cardInputs = cardFields.querySelectorAll('input');

        function toggleCardFields() {
            if (creditCard.checked) {
                cardFields.style.display = 'block';
                cardInputs.forEach(input => input.required = true);
            } else {
                cardFields.style.display = 'none';
                cardInputs.forEach(input => input.required = false);
            }
        }

        creditCard.addEventListener('change', toggleCardFields);
        cashOnDelivery.addEventListener('change', toggleCardFields);
    });
</script>