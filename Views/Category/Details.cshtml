@model ClothingWebApp.Models.Category
@{
    ViewData["Title"] = Model?.Name ?? "Category";
}

<div class="container mt-5">
    <h1 class="section-title">@Model?.Name</h1>
    <p class="text-center mb-5">@Model?.Description</p>

    @if (ViewBag.Products != null && ((IEnumerable<ClothingWebApp.Models.Product>)ViewBag.Products).Any())
    {
        <div class="row">
            @foreach (var product in (IEnumerable<ClothingWebApp.Models.Product>)ViewBag.Products)
            {
                <div class="col-md-3 mb-4">
                    <div class="product-card">
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductId })">
                            <img src="@product.ImageUrl" class="img-fluid" alt="@product.Name" 
                                 onerror="this.src='/images/products/no-image.jpg'">
                        </a>
                        <div class="product-info">
                            <div class="product-catalog-name">@product.Name</div>
                            <div class="product-catalog-price">@product.Price.ToString("0.00") LEI</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No products available in this category.
        </div>
    }
</div>