@model ClothingWebApp.Models.Category
@{
    ViewData["Title"] = Model?.Name ?? "Category";
}

<div class="container mt-5">
    <h1 class="section-title">@Model?.Name</h1>
    <p class="text-center mb-5">@Model?.Description</p>

    @if (ViewBag.Products != null && ((IEnumerable<ClothingWebApp.Models.Product>)ViewBag.Products).Any())
    {
        <div class="row">
            @foreach (var product in (IEnumerable<ClothingWebApp.Models.Product>)ViewBag.Products)
            {
                <div class="col-md-3 mb-4">
                    <div class="product-card">
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductId })">
                            <div class="product-image-container">
                                @{
                                    
                                    string displayUrl = product.ImageUrl;
                                    if (!string.IsNullOrEmpty(displayUrl) && !displayUrl.Contains("_img_0") && !displayUrl.Contains("_img_1"))
                                    {
                                        displayUrl = displayUrl + "_img_0";
                                    }
                                }
                                <img src="@displayUrl" class="img-fluid" alt="@product.Name" 
                                     onerror="this.onerror=null; this.src='/images/products/no-image.jpg';">
                            </div>
                        </a>
                        <div class="product-info">
                            <div class="product-catalog-name">@product.Name</div>
                            <div class="product-catalog-price">@product.Price.ToString("0.00") LEI</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No products available in this category.
        </div>
    }
</div>

<style>
    .product-card {
        margin-bottom: 25px;
        border: 1px solid #eee;
        border-radius: 8px;
        height: 100%;
    }

    .product-card a {
        display: block;
        text-decoration: none;
        color: inherit;
    }

    .product-image-container {
        position: relative;
        width: 100%;
        padding-bottom: 100%; 
        background-color: #f9f9f9;
        overflow: hidden;
    }

    .product-image-container img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-info {
        padding: 15px;
        background-color: white;
    }

    .product-catalog-name {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 5px;
        text-transform: uppercase;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .product-catalog-price {
        font-size: 16px;
        font-weight: 600;
        color: #b10000;
    }
</style>
