@model ClothingWebApp.Models.Category

@{
    ViewData["Title"] = Model?.Name ?? "Category";
}

<div class="container mt-4">
    <h1>@Model?.Name</h1>
    <p>@Model?.Description</p>
    
    <div class="alert alert-info">
        Products for this category will be displayed here in the future.
    </div>
    
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
</div>