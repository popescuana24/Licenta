@model ClothingWebApp.Models.Customer

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">My Profile</h1>
                <a href="/Product" class="btn btn-continue-shopping">
                    <i class="fas fa-arrow-left me-2"></i> Continue Shopping
                </a>
            </div>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <div class="row">
                <!-- Left sidebar with profile menu -->
                <div class="col-md-3 mb-4">
                    <div class="card profile-sidebar">
                        <div class="card-body text-center py-5">
                            <div class="profile-avatar mb-3">
                                <i class="fas fa-user-circle" style="font-size: 5rem; color: #b10000;"></i>
                            </div>
                            <h5 class="mb-1">@Model.FirstName @Model.LastName</h5>
                            <p class="text-muted">@Model.Email</p>
                        </div>
                        <div class="list-group list-group-flush">
                            <a href="@Url.Action("Profile", "Account")" class="list-group-item list-group-item-action active">
                                <i class="fas fa-user me-2"></i> Personal Information
                            </a>
                            <a href="@Url.Action("OrderHistory", "Account")" class="list-group-item list-group-item-action">
                                <i class="fas fa-shopping-bag me-2"></i> Order History
                            </a>
                            <a href="@Url.Action("ChangePassword", "Account")" class="list-group-item list-group-item-action">
                                <i class="fas fa-lock me-2"></i> Change Password
                            </a>
                            <a href="@Url.Action("Logout", "Account")" class="list-group-item list-group-item-action text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Right content area with personal information -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Personal Information</h5>
                            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-sm btn-outline-dark">
                                <i class="fas fa-pen me-1"></i> Edit
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-group">
                                        <label class="form-label text-muted">First Name</label>
                                        <p class="fw-bold fs-5">@Model.FirstName</p>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <div class="form-group">
                                        <label class="form-label text-muted">Last Name</label>
                                        <p class="fw-bold fs-5">@Model.LastName</p>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <div class="form-group">
                                        <label class="form-label text-muted">Email Address</label>
                                        <p class="fw-bold fs-5">@Model.Email</p>
                                    </div>
                                </div>
                                
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label text-muted">Shipping Address</label>
                                        <p class="fw-bold fs-5">@(string.IsNullOrEmpty(Model.Address) ? "No address provided" : Model.Address)</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="border-top pt-4 mt-2">
                                <p class="text-muted mb-2">Security Settings</p>
                                <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-outline-dark">
                                    <i class="fas fa-lock me-2"></i> Change Password
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card mt-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Orders</h5>
                            <a href="@Url.Action("OrderHistory", "Account")" class="btn btn-sm btn-outline-dark">
                                View All
                            </a>
                        </div>
                        <div class="card-body p-0">
                            <!-- This part needs to be filled with actual data if available -->
                            <!-- Otherwise, show a placeholder message -->
                            <div class="text-center py-5">
                                <i class="fas fa-shopping-bag mb-3" style="font-size: 2rem; color: #ccc;"></i>
                                <p>You haven't placed any orders yet.</p>
                                <a href="/Product" class="btn btn-checkout">Start Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-sidebar .list-group-item.active {
        background-color: #b10000;
        border-color: #b10000;
    }
    
    .profile-sidebar .list-group-item:hover:not(.active) {
        background-color: #f8f9fa;
    }
    
    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }
</style>