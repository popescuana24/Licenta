@model ClothingWebApp.Models.Order

@{
    ViewData["Title"] = "Order Details";
    var payment = ViewBag.Payment;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">Order #@Model.OrderId</h1>
                <a href="/Account/OrderHistory" class="btn btn-outline-dark">
                    <i class="fas fa-arrow-left me-2"></i> Back to Orders
                </a>
            </div>
            
            <div class="card order-card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Order Summary</h5>
                            <small class="text-muted">@Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</small>
                        </div>
                        <span class="badge bg-success py-2 px-3">Completed</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-uppercase text-muted mb-3">Shipping Information</h6>
                            <p class="mb-1">
                                <strong>
                                    @(Model.Customer != null 
                                        ? $"{Model.Customer.FirstName} {Model.Customer.LastName}" 
                                        : "Unknown Customer")
                                </strong>
                            </p>
                            <p class="mb-1">
                                @(Model.Customer != null ? Model.Customer.Address : "Address not available")
                            </p>
                            <p class="mb-1">
                                @(Model.Customer != null ? Model.Customer.Email : "Email not available")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-uppercase text-muted mb-3">Payment Information</h6>
                            <p class="mb-1"><strong>Method:</strong> @(payment?.PaymentMethod ?? "Unknown")</p>
                            <p class="mb-1">
                                <strong>Status:</strong> 
                                @if (payment?.IsPaid == true)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </p>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <h6 class="text-uppercase text-muted mb-3">Order Summary</h6>
                    
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                                    <td class="text-end">@Model.TotalAmount.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Shipping:</strong></td>
                                    <td class="text-end">$0.00</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Tax:</strong></td>
                                    <td class="text-end">$0.00</td>
                                </tr>
                                <tr class="order-total">
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td class="text-end"><strong>@Model.TotalAmount.ToString("C")</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="mt-4 d-flex justify-content-between">
                <a href="/Account/OrderHistory" class="btn btn-outline-dark">
                    <i class="fas fa-list me-2"></i> Back to Orders
                </a>
                <a href="/Product" class="btn btn-checkout">
                    <i class="fas fa-shopping-bag me-2"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>