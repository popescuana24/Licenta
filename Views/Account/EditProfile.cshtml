@model ClothingWebApp.Models.Customer

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">Edit Profile</h1>
                <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-dark">
                    <i class="fas fa-arrow-left me-2"></i> Back to Profile
                </a>
            </div>
            
            <div class="row">
                <!-- Left sidebar with profile menu -->
                <div class="col-md-3 mb-4">
                    <div class="card profile-sidebar">
                        <div class="card-body text-center py-5">
                            <div class="profile-avatar mb-3">
                                <i class="fas fa-user-circle" style="font-size: 5rem; color: #b10000;"></i>
                            </div>
                            <h5 class="mb-1">@Model.FirstName @Model.LastName</h5>
                            <p class="text-muted">@Model.Email</p>
                        </div>
                        <div class="list-group list-group-flush">
                            <a href="@Url.Action("Profile", "Account")" class="list-group-item list-group-item-action active">
                                <i class="fas fa-user me-2"></i> Personal Information
                            </a>
                            <a href="@Url.Action("OrderHistory", "Account")" class="list-group-item list-group-item-action">
                                <i class="fas fa-shopping-bag me-2"></i> Order History
                            </a>
                            <a href="@Url.Action("ChangePassword", "Account")" class="list-group-item list-group-item-action">
                                <i class="fas fa-lock me-2"></i> Change Password
                            </a>
                            <a href="@Url.Action("Logout", "Account")" class="list-group-item list-group-item-action text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Right content area with edit form -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Edit Personal Information</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="EditProfile" method="post">
                                <input type="hidden" asp-for="CustomerId" />
                                <input type="hidden" asp-for="Email" />
                                <input type="hidden" asp-for="Password" />
                                
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="FirstName" class="form-label">First Name</label>
                                        <input asp-for="FirstName" class="form-control form-control-lg" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="LastName" class="form-label">Last Name</label>
                                        <input asp-for="LastName" class="form-control form-control-lg" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-md-12 mb-3">
                                        <label asp-for="Address" class="form-label">Shipping Address</label>
                                        <textarea asp-for="Address" class="form-control" rows="4" placeholder="Enter your full shipping address"></textarea>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                    <a asp-action="Profile" class="btn btn-outline-secondary me-md-2">Cancel</a>
                                    <button type="submit" class="btn btn-checkout">Save Changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-sidebar .list-group-item.active {
        background-color: #b10000;
        border-color: #b10000;
    }
    
    .profile-sidebar .list-group-item:hover:not(.active) {
        background-color: #f8f9fa;
    }
    
    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }
    
    .btn-checkout {
        background-color: #b10000;
        color: white;
    }
    
    .btn-checkout:hover {
        background-color: #900000;
        color: white;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}