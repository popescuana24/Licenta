@model IEnumerable<ClothingWebApp.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container mt-4">
    <h1>Order History</h1>
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't placed any orders yet. <a asp-controller="Home" asp-action="Index">Start shopping</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.OrderDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                            <td>@order.TotalAmount.ToString("C")</td>
                            <td>
                                <span class="badge bg-success">Completed</span>
                            </td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-sm btn-primary">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    
    <div class="mt-4">
        <a asp-action="Profile" class="btn btn-secondary">Back to Profile</a>
    </div>
</div>