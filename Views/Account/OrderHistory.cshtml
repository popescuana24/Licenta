@model IEnumerable<ClothingWebApp.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">Order History</h1>
                <a href="/Product" class="btn btn-continue-shopping">
                    <i class="fas fa-arrow-left me-2"></i> Continue Shopping
                </a>
            </div>
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            
            @if (!Model.Any())
            {
                <div class="card order-card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-shopping-bag mb-3" style="font-size: 3rem; color: #ccc;"></i>
                        <h3>No Orders Yet</h3>
                        <p class="text-muted">You haven't placed any orders yet.</p>
                        <a href="/Product" class="btn btn-checkout mt-3">Start Shopping</a>
                    </div>
                </div>
            }
            else
            {
                @foreach (var order in Model)
                {
                    <div class="card order-card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Order #@order.OrderId</h5>
                                <small class="text-muted">@order.OrderDate.ToString("MMMM dd, yyyy")</small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-success py-2 px-3">Completed</span>
                                <div class="mt-1">Total: <strong>@order.TotalAmount.ToString("C")</strong></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-uppercase text-muted mb-3">Shipping Information</h6>
                                    <p class="mb-1"><strong>@order.Customer.FirstName @order.Customer.LastName</strong></p>
                                    <p class="mb-1">@order.Customer.Address</p>
                                    <p class="mb-1">@order.Customer.Email</p>
                                </div>
                                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                                    <a href="@Url.Action("OrderDetails", "Account", new { id = order.OrderId })" class="btn btn-outline-dark">
                                        <i class="fas fa-eye me-2"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>