@model ClothingWebApp.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="row mt-4">
    <div class="col-md-5">
        <!-- Simple image gallery -->
        <div id="productImageCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
                </div>
                
                @{
                    // Try to derive the second image path from the first
                    string secondImagePath = Model.ImageUrl.Replace("_img_0", "_img_1");
                    
                    <div class="carousel-item">
                        <img src="@secondImagePath" class="img-fluid" alt="@Model.Name - View 2" 
                             onerror="this.style.display='none'; document.querySelector('.carousel-control-prev').style.display='none'; document.querySelector('.carousel-control-next').style.display='none';">
                    </div>
                }
            </div>
            
            <!-- Add carousel controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#productImageCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#productImageCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    
    <div class="col-md-7">
        <h1>@Model.Name</h1>
        <h4 class="text-muted">@Model.Price.ToString("C")</h4>
        
        <div class="mb-3">
            <span class="badge bg-primary">@Model.Color</span>
            @if (!string.IsNullOrEmpty(Model.Size))
            {
                <span class="badge bg-secondary">@Model.Size</span>
            }
            <span class="badge bg-info">@Model.Category?.Name</span>
        </div>
        
        <p>@Model.Description</p>
        
        <form asp-controller="Cart" asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.ProductId" />
            
            <!-- Size selection -->
            @if (Model.Category?.Name?.ToUpper().Contains("BAG") != true)
            {
                <div class="mb-4">
                    <label class="form-label">Select Size:</label>
                    
                    @if (Model.Category?.Name?.ToUpper() == "SHOES")
                    {
                        <div class="btn-group" role="group" aria-label="Shoe sizes">
                            @foreach (var size in new[] { "36", "37", "38", "39", "40", "41" })
                            {
                                <input type="radio" class="btn-check" name="selectedSize" id="size-@size" value="@size" autocomplete="off" required>
                                <label class="btn btn-outline-secondary" for="size-@size">@size</label>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="btn-group" role="group" aria-label="Clothing sizes">
                            @foreach (var size in new[] { "XS", "S", "M", "L", "XL" })
                            {
                                <input type="radio" class="btn-check" name="selectedSize" id="size-@size" value="@size" autocomplete="off" required>
                                <label class="btn btn-outline-secondary" for="size-@size">@size</label>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- For bags, add a hidden input with default value -->
                <input type="hidden" name="selectedSize" value="One Size">
            }
            
            <button type="submit" class="btn btn-success">Add to Cart</button>
        </form>
    </div>
</div>