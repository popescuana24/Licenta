@model IEnumerable<ClothingWebApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <h1 class="section-title">Our Products</h1>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="product-card">
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductId })">
                            <img src="@product.ImageUrl" class="img-fluid" alt="@product.Name" 
                                 onerror="this.src='/images/products/no-image.jpg'">
                        </a>
                        <div class="product-info">
                            <div class="product-catalog-name">@product.Name</div>
                            <div class="product-catalog-price">@product.Price.ToString("0.00") LEI</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No products available.
        </div>
    }
</div>