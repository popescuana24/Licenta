@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <h2 class="section-title text-start">GET IN TOUCH</h2>
            <p class="mb-4">Have questions about our products, orders, or just want to say hello? We're here to help! Reach out to us using the information below.</p>
            
            <div class="contact-info">
                <div class="d-flex mb-4">
                    <div class="contact-icon me-3">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Our Location</h5>
                        <p class="mb-0">123 Avenue des Champs-Élysées<br>75008 Paris, France</p>
                    </div>
                </div>
                
                <div class="d-flex mb-4">
                    <div class="contact-icon me-3">
                        <i class="fas fa-phone-alt"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Phone Number</h5>
                        <p class="mb-0">+33 1 23 45 67 89</p>
                    </div>
                </div>
                
                <div class="d-flex mb-4">
                    <div class="contact-icon me-3">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Email Address</h5>
                        <p class="mb-0">contact@finesse.com</p>
                    </div>
                </div>
                
                <div class="d-flex">
                    <div class="contact-icon me-3">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Working Hours</h5>
                        <p class="mb-0">Monday - Friday: 9:00 AM - 6:00 PM<br>Saturday: 10:00 AM - 4:00 PM<br>Sunday: Closed</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="map-container h-100">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.142047342086!2d2.2953513!3d48.869782699999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fc4552c7659%3A0x12689e68fe42142a!2sChamps-%C3%89lys%C3%A9es!5e0!3m2!1sen!2sfr!4v1650896981200!5m2!1sen!2sfr" width="100%" height="100%" style="border:0; min-height: 450px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>

<style>
    /* Contact Us Page Styles */
    .section-title {
        font-weight: 700;
        letter-spacing: 1px;
        text-transform: uppercase;
        margin-bottom: 1.5rem;
    }
    
    .contact-icon {
        width: 40px;
        height: 40px;
        background-color: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #b10000;
        font-size: 1.2rem;
    }
    
    .map-container {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
    }
    
    
</style>