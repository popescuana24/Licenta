@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Black Background and Model -->
<div class="hero-section">
    <div class="container-fluid px-0">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="/images/firstImage2.png" alt="Model" class="hero-model">
            </div>
            <div class="col-md-7 d-flex align-items-center">
                <div class="hero-content text-end mx-5">
                    <h1 class="hero-title">YOUR STYLE</h1>
                    <h1 class="hero-title">YOUR SIGNATURE</h1>
                    <p class="hero-subtitle mt-4"><i class="fas fa-do-not-enter    "></i>
                        Elevate Your Wardrobe. Empower Your Confidence. And Embrace<br>
                        Your Unique Fashion Journey
                    </p>
                    <div class="mt-4">
                        <a href="/Product" class="btn btn-discover">DISCOVER OUR PRODUCTS</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sleek Timeless Distinct Section -->
<div class="tagline-section">
    <div class="container">
        <h2 class="tagline-text">Sleek. Timeless. Distinct.</h2>
    </div>
</div>

<!-- Full Width Image Showcase -->
<div class="container-fluid px-0">
    <div class="row g-0">
        <div class="col-md-6">
            <img src="/images/secondImage.jpg" alt="Fashion Image" class="img-fluid full-width-image">
        </div>
        <div class="col-md-6">
            <img src="/images/thirdImage.jpg" alt="Fashion Image" class="img-fluid full-width-image">
        </div>
    </div>
</div>

<!-- The Art of Dressing Well Section -->
<div class="tagline-section">
    <div class="container">
        <h2 class="tagline-text">The Art of Dressing Well</h2>
    </div>
</div>

<!-- The Finesse Experience Section -->
<div class="finesse-experience-section">
    <div class="video-container">
        <video autoplay muted loop class="full-width-video">
            <source src="/videos/fashion.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="video-overlay">
            <h1 class="video-text">FINESSE</h1>
        </div>
    </div>
</div>

<!-- Newsletter Section -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h2 class="section-title">Join Our Community</h2>
            <p class="lead mb-4">Subscribe to our newsletter for exclusive offers, new arrivals, and styling tips.</p>
            <div class="input-group mb-3 mx-auto" style="max-width: 500px;">
                <input type="email" class="form-control" placeholder="Your email address">
                <button class="btn btn-dark" type="button">SUBSCRIBE</button>
            </div>
            <p class="small text-muted">By subscribing, you agree to our terms and privacy policy.</p>
        </div>
    </div>
</div>