<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FINESSE</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!--font TOT SITE UL-->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!--ICONS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand text-black" href="/">FINESSE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Home" && (ViewContext.RouteData.Values["action"]?.ToString() ?? "") == "Index" ? "active" : "")" href="/">HOME</a>
                        </li>
                        <li class="nav-item categories-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Category" ? "active" : "")" href="javascript:void(0);">
                                CATEGORIES
                            </a>
                            <div class="categories-menu">
                                <a href="/Category/Details/1">Bags</a>
                                <a href="/Category/Details/2">Blazers</a>
                                <a href="/Category/Details/3">Dresses/Jumpsuits</a>
                                <a href="/Category/Details/4">Jackets</a>
                                <a href="/Category/Details/5">Shirts</a>
                                <a href="/Category/Details/6">Shoes</a>
                                <a href="/Category/Details/7">Sweaters</a>
                                <a href="/Category/Details/10">Skirts</a>
                                <a href="/Category/Details/11">T-Shirts/Tops</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Product" ? "active" : "")" href="/Product">PRODUCTS</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Home" && (ViewContext.RouteData.Values["action"]?.ToString() ?? "") == "Contact" ? "active" : "")" href="/Home/Contact">CONTACT US</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto icons-nav">
                        <li class="nav-item">
                            <a href="/Cart" class="nav-link position-relative">
                                <i class="fas fa-shopping-bag"></i>
                                @{
                                    var cartCount = Context.Request.Cookies["CartCount"];
                                    if (!string.IsNullOrEmpty(cartCount) && int.Parse(cartCount) > 0)
                                    {
                                        <span class="cart-badge">@cartCount</span>
                                    }
                                    else
                                    {
                                        <span class="cart-badge" style="display: none;">0</span>
                                    }
                                }
                            </a>
                        </li>
                        <li class="nav-item profile-item">
                            <a href="javascript:void(0);" class="nav-link">
                                <i class="fas fa-user"></i>
                            </a>
                            <div class="profile-menu">
                                @if (Context.User.Identity?.IsAuthenticated == true)
                                {
                                    <a href="/Account/Profile">My Profile</a>
                                    <div class="menu-divider"></div>
                                    <a href="/Account/Logout">Logout</a>
                                }
                                else
                                {
                                    <a href="/Account/Login">Login</a>
                                    <a href="/Account/Register">Register</a>
                                }
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    @* <!-- Footer Section with just copyright -->
    <footer class="footer text-white mt-5" style="background-color: black;">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center py-3">
                    <p class="mb-0">&copy; 2025 FINESSE. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    
    @* <!-- Mobile menu script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle dropdown on mobile 
            const categoriesItem = document.querySelector('.categories-item');
            const profileItem = document.querySelector('.profile-item');
            
            // For mobile: Make the category link toggle dropdown
            const categoryLink = categoriesItem.querySelector('.nav-link');
            categoryLink.addEventListener('click', function(e) {
                if (window.innerWidth < 992) {
                    e.preventDefault();
                    e.stopPropagation(); // Important to prevent event bubbling
                    categoriesItem.classList.toggle('open');
                    
                    // Close profile dropdown if open
                    if (profileItem.classList.contains('open')) {
                        profileItem.classList.remove('open');
                    }
                }
            });
            
            // Same for Profile dropdown
            const profileLink = profileItem.querySelector('.nav-link');
            profileLink.addEventListener('click', function(e) {
                if (window.innerWidth < 992) {
                    e.preventDefault();
                    e.stopPropagation(); // Important to prevent event bubbling
                    profileItem.classList.toggle('open');
                    
                    // Close categories dropdown if open
                    if (categoriesItem.classList.contains('open')) {
                        categoriesItem.classList.remove('open');
                    }
                }
            });
            
            // Close dropdowns when clicking elsewhere
            document.addEventListener('click', function(e) {
                if (!categoriesItem.contains(e.target) && !profileItem.contains(e.target)) {
                    categoriesItem.classList.remove('open');
                    profileItem.classList.remove('open');
                }
            });
            
            // Close mobile menu when selecting an item
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            const navbarCollapse = document.querySelector('.navbar-collapse');
            
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (navbarCollapse.classList.contains('show') && 
                        !link.parentElement.classList.contains('categories-item') && 
                        !link.parentElement.classList.contains('profile-item')) {
                        document.querySelector('.navbar-toggler').click();
                    }
                });
            });
            
            // Also close mobile menu when selecting a category
            const categoryLinks = document.querySelectorAll('.categories-menu a');
            categoryLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (navbarCollapse.classList.contains('show')) {
                        document.querySelector('.navbar-toggler').click();
                    }
                });
            });
            
            // Reset open states on resize
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 992) {
                    categoriesItem.classList.remove('open');
                    profileItem.classList.remove('open');
                }
            });
        });
    </script> *@
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>