<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clothing Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClothingWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Clothing Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">All Categories</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Bags">Bags</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Blazers">Blazers</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Dresses">Dresses/Jumpsuits</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Jackets">Jackets</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Shirts">Shirts</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Shoes">Shoes</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Sweaters">Sweaters</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Skirts">Skirts</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Tops">T-Shirt/Tops</a></li>
                            </ul>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Products</a></li>
                                    <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">Categories</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Index">Customers</a></li>
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">Orders</a></li>
                                    <li><a class="dropdown-item" asp-controller="Payment" asp-action="Index">Payments</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Hello, @User.Identity.Name!
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">My Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="History">Order History</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                                    <i class="bi bi-cart"></i> Cart
                                    @{
                                        if (Context.Request.Cookies.TryGetValue("CartCount", out string cartCountStr) && 
                                            int.TryParse(cartCountStr, out int cartCount) && cartCount > 0)
                                        {
                                            <span class="badge bg-danger rounded-pill">@cartCount</span>
                                        }
                                    }
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                                    <i class="bi bi-cart"></i> Cart
                                    @{
                                        if (Context.Request.Cookies.TryGetValue("CartCount", out string cartCountStr) && 
                                            int.TryParse(cartCountStr, out int cartCount) && cartCount > 0)
                                        {
                                            <span class="badge bg-danger rounded-pill">@cartCount</span>
                                        }
                                    }
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Clothing Shop
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>