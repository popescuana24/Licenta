<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FINESSE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black">
            <div class="container">
                <a class="navbar-brand text-white" href="/">FINESSE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Home" && (ViewContext.RouteData.Values["action"]?.ToString() ?? "") == "Index" ? "active" : "")" href="/">HOME</a>
                        </li>
                        <li class="nav-item categories-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Category" ? "active" : "")" href="/Category">
                                CATEGORIES
                            </a>
                            <div class="categories-menu">
                                <a href="/Category/Details/1">Bags</a>
                                <a href="/Category/Details/2">Blazers</a>
                                <a href="/Category/Details/3">Dresses/Jumpsuits</a>
                                <a href="/Category/Details/4">Jackets</a>
                                <a href="/Category/Details/5">Shirts</a>
                                <a href="/Category/Details/6">Shoes</a>
                                <a href="/Category/Details/7">Sweaters</a>
                                <a href="/Category/Details/10">Skirts</a>
                                <a href="/Category/Details/11">T-Shirts & Tops</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() ?? "") == "Product" ? "active" : "")" href="/Product">PRODUCTS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/">ABOUT US</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/">CONTACT US</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="/Cart" class="nav-link text-white position-relative">
                                <i class="fas fa-shopping-bag"></i>
                                @{
                                    var cartCount = Context.Request.Cookies["CartCount"];
                                    if (!string.IsNullOrEmpty(cartCount) && int.Parse(cartCount) > 0)
                                    {
                                        <span class="cart-badge">@cartCount</span>
                                    }
                                }
                            </a>
                        </li>
                        <li class="nav-item profile-item">
                            <a href="#" class="nav-link text-white">
                                <i class="fas fa-user"></i>
                            </a>
                            <div class="profile-menu">
                                <a href="/Account/Profile">My Profile</a>
                                <a href="/Account/OrderHistory">Order History</a>
                                <div class="menu-divider"></div>
                                <a href="/Account/Logout">Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer text-white mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <h5>FINESSE</h5>
                    <p>Elevate your style with our curated collections that blend timeless elegance with contemporary fashion.</p>
                    <div class="social-icons mt-3">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-pinterest-p"></i></a>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>SHOP</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Category/Details/1">Bags</a></li>
                        <li><a href="/Category/Details/5">Shirts</a></li>
                        <li><a href="/Category/Details/3">Dresses</a></li>
                        <li><a href="/Category/Details/6">Shoes</a></li>
                        <li><a href="/Product">All Products</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>INFORMATION</h5>
                    <ul class="list-unstyled">
                        <li><a href="/">About Us</a></li>
                        <li><a href="/">Contact Us</a></li>
                        <li><a href="/Home/Privacy">Privacy Policy</a></li>
                        <li><a href="/">Terms & Conditions</a></li>
                        <li><a href="/">Shipping Information</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>NEWSLETTER</h5>
                    <p>Subscribe to receive updates, access to exclusive deals, and more.</p>
                    <div class="input-group mt-3">
                        <input type="email" class="form-control" placeholder="Your email address">
                        <button class="btn" type="button">SUBSCRIBE</button>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 text-center">
                    <p class="mb-0">&copy; @DateTime.Now.Year FINESSE. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>